[flake8]
max-line-length = 100
extend-ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
exclude =
    .git,
    __pycache__,
    .eggs,
    *.egg,
    build,
    dist,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache,
    .tox,
per-file-ignores =
    # __init__.py can have unused imports
    __init__.py: F401
    # tests can have assert statements
    tests/*: S101
max-complexity = 10
